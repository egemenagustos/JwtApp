@model List<UserListModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model?.Count > 0)
{
    <div class="text-end">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Ekle</a>

    </div>
    <br>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Kullanıcı Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td><a class="btn btn-danger btn-sm" asp-route-id="@user.Id" asp-action="Remove" asp-controller="Category">Sil</a></td>
                    <td><a class="btn btn-success btn-sm" asp-route-id="@user.Id" asp-action="Update" asp-controller="Category">Güncelle</a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="text-center">
        Herhangi bir kayıt bulunamadı!
    </div>
}



