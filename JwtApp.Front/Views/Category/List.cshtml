@model List<CategoryListModel>
@{
    ViewData["Title"] = "List";
    Layout = "_Layout";
}
@if(Model?.Count > 0)
{
    <div class="text-end">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Ekle</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Kategori</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Definition</td>
                    <td><a class="btn btn-danger btn-sm" asp-route-id="@category.Id" asp-action="Remove" asp-controller="Category">Sil</a></td>
                </tr>
            }
            
        </tbody>
    </table>
}
else
{
    <div class="text-center">
        Herhangi bir kayıt bulunamadı!
    </div>
}


