@model List<ProductListModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model?.Count > 0)
{
    <div class="text-end">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Product">Ekle</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Ürünler</th>
                <th>Stok</th>
                <th>Fiyat</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Stock</td>
                    <td>@product.Price</td>
                    <td><a class="btn btn-danger btn-sm" asp-route-id="@product.Id" asp-action="Remove" asp-controller="Product">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="text-center">
        Herhangi bir kayıt bulunamadı!
    </div>
}

